{
    "name": "vandise/amber",
    "description": "Amber Framework",
    "type": "library",
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "bin-dir": "scripts"
    },
    "bin": ["resin"],
    "optimize-autoloader": true,
    "autoload": {
        "psr-4": {
          "Amber\\Framework\\": "framework/src/",
          "Amber\\Event\\": "event/src/",
          "Amber\\System\\": "system/src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpdocumentor/phpdocumentor": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Benjamin J. Anderson",
            "email": "andeb2804@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "corneltek/getoptionkit": "^2.5@dev"
    }
}
